<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bckColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bckColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:paddingRight="20dp"
            android:paddingBottom="50dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/habitUpdateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/Bck_btn1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/HabitEdit_Title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.454"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_arrow_left" />

                <TextView
                    android:id="@+id/HabitEdit_Title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/Bck_btn1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.571"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Drink Water"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Fill the details below to Edit your habit"
                android:textAlignment="center"
                android:textColor="#6A6A77"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="30dp"
                android:text="Task title"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/habitTitle_Edit"
                tools:ignore="MissingPrefix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_border"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="30dp"
                android:text="Task description"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/habitDescription_Edit"
                tools:ignore="MissingPrefix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_border"
                android:padding="10dp"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                tools:ignore="MissingPrefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="30dp"
                android:text="Goal"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/HabitGoal_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_border"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="30dp"
                android:text="Start Date"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/HabitStartDate_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_border"
                android:focusable="false"
                android:hint="DD/MM/YY"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="30dp"
                android:text="Reminder"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/HabitTime_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_border"
                android:focusable="false"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="30dp"
                android:text="Pick an icon for your habit"
                android:textColor="@android:color/black" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/studyy"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_img_border"
                        android:elevation="5dp"
                        android:onClick="onImageClicked"
                        android:padding="25dp"
                        android:src="@drawable/ic_study_work_svgrepo_com"
                        android:tag="ic_study_work_svgrepo_com" />

                    <ImageView
                        android:id="@+id/sportt"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_img_border"
                        android:elevation="5dp"
                        android:onClick="onImageClicked"
                        android:padding="25dp"
                        android:src="@drawable/ic_sport_faculty_svgrepo_com"
                        android:tag="ic_sport_faculty_svgrepo_com" />
                    <ImageView
                        android:id="@+id/quitt"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_img_border"
                        android:elevation="5dp"
                        android:onClick="onImageClicked"
                        android:padding="25dp"
                        android:src="@drawable/ic_stop_svgrepo_com"
                        android:tag="ic_stop_svgrepo_com" />

                    <ImageView
                        android:id="@+id/meditatee"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_img_border"
                        android:elevation="5dp"
                        android:onClick="onImageClicked"
                        android:padding="25dp"
                        android:src="@drawable/ic_meditation_think_guru_meditate_svgrepo_com"
                        android:tag="ic_meditation_think_guru_meditate_svgrepo_com" />

                    <ImageView
                        android:id="@+id/sleepp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_img_border"
                        android:elevation="5dp"
                        android:onClick="onImageClicked"
                        android:padding="25dp"
                        android:src="@drawable/ic_sleep_svgrepo_com"
                        android:tag="ic_sleep_svgrepo_com" />

                    <ImageView
                        android:id="@+id/wakeUpp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_img_border"
                        android:elevation="5dp"
                        android:onClick="onImageClicked"
                        android:padding="25dp"
                        android:src="@drawable/ic_wake_up_svgrepo_com"
                        android:tag="ic_wake_up_svgrepo_com" />


                    <ImageView
                        android:id="@+id/smokee"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_img_border"
                        android:elevation="5dp"
                        android:onClick="onImageClicked"
                        android:padding="25dp"
                        android:src="@drawable/ic_no_smoking_svgrepo_com"
                        android:tag="ic_no_smoking_svgrepo_com" />

                    <ImageView
                        android:id="@+id/cyclingg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_img_border"
                        android:elevation="5dp"
                        android:onClick="onImageClicked"
                        android:padding="25dp"
                        android:src="@drawable/ic_cycling_sport_svgrepo_com"
                        android:tag="ic_cycling_sport_svgrepo_com" />

                    <ImageView
                        android:id="@+id/waterr"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_img_border"
                        android:elevation="5dp"
                        android:onClick="onImageClicked"
                        android:padding="25dp"
                        android:src="@drawable/ic_water_svgrepo_com"
                        android:tag="ic_water_svgrepo_com" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cancel_edit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/btn_outline"
                    android:text="Cancel"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_update"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background"
                    android:text="Update"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>